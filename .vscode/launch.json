    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (Debug)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build and Run (Debug)",
            "program": "games/proof-of-concept/out/rom.out",
            /*"logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            },*/
            "miDebuggerPath": "${workspaceFolder}/../../SDKs/SGDKplusplus/x68k-gcc/bin/m68k-elf-gdb.exe",
            "miDebuggerServerAddress": ":1234",
            "MIMode": "gdb",
            "stopAtEntry": true,
            "setupCommands": [
                {
                    "description": "File",
                    "text": "file \"C:/Users/peted/Documents/GitHub/adventure-md/games/proof-of-concept/out/rom.out\"",
                    "ignoreFailures": false
                },
                {
                   "text": "set target-async off"
                },
                {
                   "text": "set print pretty on"
                }
            ],
            "targetArchitecture": "x64"
        }
    ]
}